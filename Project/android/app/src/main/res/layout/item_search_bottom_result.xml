<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_home_search_result_hor_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/my_location" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <com.rrkc.Location.MyTextView
            android:id="@+id/tv_search_result_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试数据北部软件园"
            android:textColor="#333333"
            android:textSize="16sp" />

        <com.rrkc.Location.MyTextView
            android:id="@+id/tv_search_result_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试数据北部软件园"
            android:textColor="#999999"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>